{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-load",

    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    }
  ]
}
